<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#211D44"
    tools:context=".stopwatchact">


    <ImageView
        android:id="@+id/circleimage"
        android:layout_width="327dp"
        android:layout_height="333dp"
        android:src="@drawable/bgcircle"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="62dp" />


    <ImageView
        android:id="@+id/arrow"
        android:layout_width="330dp"
        android:layout_height="650dp"
        android:src="@drawable/icanchor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-94dp" />

    <Button
        android:id="@+id/changer"
        android:layout_width="187dp"
        android:layout_height="0dp"
        android:background="@drawable/bggreen"
        android:text="Start here"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="501dp" />

    <Button
        android:id="@+id/fworkout"
        android:layout_width="187dp"
        android:layout_height="0dp"
        android:background="@drawable/bgpink"
        android:text="Finish Workout"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="604dp" />


</androidx.constraintlayout.widget.ConstraintLayout>